.userPage
  font-weight 600
  display flex
  align-items center
  justify-content center
  max-width 500px
  margin 30px auto
  flex-direction column
  > *
    margin-bottom 10px

.logInLink
  font-weight 600
  display flex
  align-items center
  justify-content center
  margin 10px 0

.user-img
  border-radius 20px
  width 35px
  height @width
  background #5C77F7
  background linear-gradient(to right, #5c77f7, #7654dd)
  margin 0 10px
  box-shadow 0 0 0 1px rgba(0, 0, 0, 0.2)

.login-services
  .facebook
    background #4266B2
    padding 20px
    border-radius 3px
    cursor pointer
    margin auto
    text-align center
    max-width 250px
