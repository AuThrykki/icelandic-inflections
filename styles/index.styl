sans-serif()
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica Neue,Helvetica,Arial,sans-serif;

@import 'reset'
@import 'site/*'
@import 'inflections/*'

body
  sans-serif()
  font-size 14px
  background #f9f9f9

$red = #CF4A26
$blue = #266BCF


.hidden
  display none

*
  box-sizing border-box

a
  &:not(:hover)
    text-decoration none

html
  width 100%
  background white

body
  font-size 16px
  line-height 1.3em
  color #131313
  // background #F6F5F3
  // border 1px solid #F6F5F4
  // margin 14px
  margin 0
  background #FCFCFC
  padding 35px
  padding-bottom 20px
  // min-height calc(100vh - @margin*2)
  min-height calc(100vh)
  display flex
  flex-direction column

body > #content
  min-width 500px
  margin auto
  flex 1

h1, h2, h3, h4, h5, p, ul
  margin 0
  padding 0

// a
//   text-decoration none

ul
  // list-style-type none

pre
  font-family Fira Code, monospace
  line-height 15px
  font-size 11px
  white-space pre-wrap
  word-wrap break-word

