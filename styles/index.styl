h1
  font-weight bold
  font-size 28px
  line-height 1.1em
  text-align center
  color #000000
  display block
  margin-top 23px
  margin-bottom 30px
  font-family $serif
  a
    // color $red
    color $blue



/* _   _
  | \ | |
  |  \| | __ ___   __
  | . ` |/ _` \ \ / /
  | |\  | (_| |\ V /
  |_| \_|\__,_| \_/    */
nav
  text-align center
  margin-top 32px
  max-width 540px
  margin auto
  a
    background none
    border none
    padding 0
    margin 4px 8px
    font-family inherit
    font-size 15px
    line-height 19px
    font-weight bold
    display inline-block
    outline none
    color $red
    font-family $sans-serif
    cursor pointer
    border-bottom 2px solid rgba(0,0,0,0)
    &.selected, &:hover
      border-bottom-color @color
    &:active
      color darken(@color,10)
      border-bottom-color @color
    &[data-small]
      // font-size 14px
      font-weight 500
      color #a7a7a7
      &.selected, &:hover
        border-bottom-color @color
      &:active
        color darken(@color,10)
        border-bottom-color @color


/*   _____                     _        _
    / ____|                   | |      | |
   | (___   ___  __ _ _ __ ___| |__    | |__   _____  __
    \___ \ / _ \/ _` | '__/ __| '_ \   | '_ \ / _ \ \/ /
    ____) |  __/ (_| | | | (__| | | |  | |_) | (_) >  <
   |_____/ \___|\__,_|_|  \___|_| |_|  |_.__/ \___/_/\_\    */
input[type="search"]
  font-size 18px
  outline none
  border 1px solid #C2C2C2
  box-shadow inset 0px 0px 1px 0 #F2F2F2, inset 0px 1px 0px 0 #F6F6F6
  -webkit-appearance none
  $padding = 10px
  padding $padding
  border-radius 1px
  width 100%
  max-width 420px
  display block
  margin 30px auto 50px auto
  &:focus
    border 3px solid $blue
    $padding = $padding - 2
    padding $padding
    border-radius 2px


